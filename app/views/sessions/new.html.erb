<% provide :title, t("views.sessions.title") %>
<h1><%= t "views.sessions.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with scope: :session, url: login_path, local: true do |f| %>

      <%= f.label :email, t("views.sessions.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("views.sessions.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "views.sessions.box" %></span>
      <% end %>

      <%= f.submit t("views.sessions.title"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "views.sessions.users" %><%= link_to t("views.sessions.login"), signup_path %></p>
  </div>
</div>
