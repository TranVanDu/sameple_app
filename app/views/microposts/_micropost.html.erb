<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.user_size_gravatar), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "microposts.html.content2" %><%= time_ago_in_words(micropost.created_at) %> <%=t "microposts.html.content3" %>
    <% if current_user? micropost.user %>
      <%= link_to t("microposts.html.content1"), micropost, method: :delete, data: {confirm: "You sue?"} %>
    <% end %>
  </span>
</li>
